<%= form_with model: @promotion do |f| %>
    <div>
        <%= f.label :name, 'Nome' %><br> 
        <%= f.text_field :name%>
    </div>
    <br>
    <div>
        <%= f.label :description, 'Descrição' %><br>
        <%= f.text_field :description %>
    </div>
    <br>
    <div>
        <%= f.label :code, 'Código' %><br>
        <%= f.text_field :code %>
    </div>
    <br>
    <div>
        <%= f.label :discount_rate, 'Desconto' %><br>
        <%= f.text_field :discount_rate %>
    </div>
    <br>
    <div>
        <%= f.label :coupon_quantity, 'Quantidade de cupons' %><br>
        <%= f.number_field :coupon_quantity %>
    </div>
    <br>
    <div>
        <%= f.label :expiration_date, 'Data de término' %><br>
        <%= f.date_field :expiration_date %>
    </div>
    <br>
    <div>
        <%= f.submit message %>
    </div>
<% end %>

<% if @promotion.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@promotion.errors.count, "error") %> have occurred:</h2>

    <ul>
      <% @promotion.errors.each do |error| %>
        <li> <%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
