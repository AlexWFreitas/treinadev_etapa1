<%= form_with model: @promotion do |f| %>
    <div>
        <%= f.label :name %><br> 
        <%= f.text_field :name %>
    </div>
    <br>
    <div>
        <%= f.label :description %><br>
        <%= f.text_field :description %>
    </div>
    <br>
    <div>
        <%= f.label :code %><br>
        <%= f.text_field :code %>
    </div>
    <br>
    <div>
        <%= f.label :discount_rate %><br>
        <%= f.number_field :discount_rate, step: 0.01 %>
        </label>
        </span>
    </div>
    <br>
    <div>
        <%= f.label :coupon_quantity %><br>
        <%= f.number_field :coupon_quantity %>
    </div>
    <br>
    <div>
        <%= f.label :expiration_date %><br>
        <%= f.date_field :expiration_date %>
    </div>
    <br>
    <div>
        <%= f.submit %>
    </div>
<% end %>

<% if @promotion.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@promotion.errors.count, (t "promotions.error_occurred.one"), plural: (t "promotions.error_occurred.other")) %></h2>

    <ul>
      <% @promotion.errors.each do |error| %>
        <li> <%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
